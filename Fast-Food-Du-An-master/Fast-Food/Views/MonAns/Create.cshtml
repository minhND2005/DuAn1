@model Fast_Food.Models.MonAn

@{
    ViewData["Title"] = "Thêm Món Ăn";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white text-center" style="background-color: #FF4500;">
                    <h3 class="mb-0">Thêm Món Ăn Mới</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Loại Sản Phẩm -->
                        <div class="mb-3">
                            <label asp-for="LoaiSanPham" class="form-label fw-bold">Loại Sản Phẩm</label>
                            <select asp-for="LoaiSanPham" class="form-select">
                                <option value="0">--- Chọn Loại Món ---</option>
                                <option value="Gà">Gà</option>
                                <option value="Kem">Kem</option>
                                <option value="Burger">Burger</option>
                                <option value="Pizza">Pizza</option>
                                <option value="Khoai Tây">Khoai Tây</option>
                                <option value="Đồ Uống">Đồ Uống</option>
                                <option value="Combo">Combo</option>
                            </select>
                            <span asp-validation-for="LoaiSanPham" class="text-danger"></span>
                        </div>

                        <!-- Tên Món -->
                        <div class="mb-3">
                            <label asp-for="TenMon" class="form-label fw-bold">Tên Món</label>
                            <input asp-for="TenMon" class="form-control" placeholder="Nhập tên món ăn" />
                            <span asp-validation-for="TenMon" class="text-danger"></span>
                        </div>

                        <!-- Giá -->
                        <div class="mb-3">
                            <label asp-for="Gia" class="form-label fw-bold">Giá</label>
                            <input asp-for="Gia" type="number" class="form-control" placeholder="Nhập giá" />
                            <span asp-validation-for="Gia" class="text-danger"></span>
                        </div>

                        <!-- Số Lượng -->
                        <div class="mb-3">
                            <label asp-for="SoLuong" class="form-label fw-bold">Số Lượng</label>
                            <input asp-for="SoLuong" type="number" class="form-control" placeholder="Nhập số lượng" />
                            <span asp-validation-for="SoLuong" class="text-danger"></span>
                        </div>

                        <!-- Trạng Thái -->
                        <div class="mb-3">
                            <label asp-for="TrangThai" class="form-label fw-bold">Trạng Thái</label>
                            <select asp-for="TrangThai" class="form-select">
                                <option value="true">Còn hàng</option>
                                <option value="false">Hết hàng</option>
                            </select>
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>

                        <!-- Hình Ảnh -->
                        <div class="mb-3">
                            <label asp-for="HinhAnh" class="form-label fw-bold">Hình Ảnh</label>
                            <input type="file" name="HinhAnh" class="form-control" accept="image/*" />
                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                        </div>

                        <!-- Nút Submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn text-white fw-bold" style="background-color: #FF4500;">Thêm Món Ăn</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Link Quay Lại -->
            <div class="text-center mt-3">
                <a asp-action="QuanLySanPham" class="text-decoration-none fw-bold" style="color: #FF4500;">&larr; Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>
